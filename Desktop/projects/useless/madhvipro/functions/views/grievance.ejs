   <div class="container mt-5">
      <div class="row">
         <div class="col-md"></div>
         <div class="col-md-8">
                  <div class="card my-4">
                     <div class="card-header text-center border-0 py-3">
                        <p class="m-0 text-muted ">Grievance</p>
                     </div>
                     <div class="card-body px-lg-5 pt-2">
                      <div class="p-2">
                         <% if (msg2) { %>
                       <div class="alert alert-warning alert-dismissible fade show">
                         <h5><%= msg2%></h5>     
                       </div>
                           <% } %>
                      </div>
                        <form method="post" action="/" enctype="multipart/form-data" >                  
                            
                              <div class="md-form">
              
                           <select class="browser-default custom-select" name="type" onchange='CheckColors(this.value);' required>
                              <option value="" selected disabled> Type of grievance</option>
                              <option value="Hospital bill">Hospital bill</option>
                              <option  value="Mistreatement in hospital">Mistreatement in hospital</option>
                               <option  value="Hospital cleanliness">Hospital cleanliness</option>
                               <option  value="others">other</option>
                           </select>
                        </div>
                                        <div class="md-form md-outline">
                        <input type="text" name="color" id="color" class="form-control"
                        placeholder="Type of grievance" style='display:none;'  />
                           </div>
                                <!-- <div class="input-group">
                                    <div class="input-group-prepend"> <span class="input-group-text" id="inputGroupFileAddon01">Upload</span> </div>
                                    <div class="custom-file">
